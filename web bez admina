    $sql = "SELECT u.user_id, u.username, MAX(s.score) AS score
            FROM 1AUsers u
            INNER JOIN 1AScores s ON u.user_id = s.user_id
            GROUP BY u.user_id, u.username
            ORDER BY score DESC;";
    $result = $conn->query($sql);

